CROSS_HOST="x86_64-w64-mingw32"
ORIG_PN="libtool"
inherit cross

DESCRIPTION="libtool for MinGW-w64 Win64 toolchain"
HOMEPAGE="http://www.gnu.org/software/libtool/"
case $((${PV[3]%[a-z]} % 2)) in
1)	SRC_URI="http://pogma.com/libtool/${P}.tar.gz" ;;
0)	SRC_URI="mirror://gnu/libtool/${ORIG_PN}-${PV}.tar.lzma" ;;
esac

src_compile() {
	cd ${B}
	cygconf
	cygmake -j1
}

src_install() {
	cd ${B}
	cyginstall

	exeinto /usr/bin
	newexe libtool ${CROSS_HOST}-libtool

	rm -fr ${D}${CROSS_DATADIR}
}
